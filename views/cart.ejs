<%- include('partials/header.ejs'); -%>

<h1>Your shopping cart</h1>

<body>

    <div class="row cart-list">
        <div class="col">
            <% for (const item of cart) { %>
            <img src="/img/<%=item.price_data.product_data.name%>.png" alt="<%=item.price_data.product_data.name%>">
            <% } %>
        </div>
        <div class="col">
            <% for (const item of cart) { %>
            <p><%=item.price_data.product_data.name%>&#9;<%=item.price_data.unit_amount%></p>
            <% } %>
        </div>
    </div>


    <div class="row">
        <div class="col text-center">
            <button class="btn btn-primary btn-lg" id="checkout-button" onclick="checkout()">Checkout</button>
        </div>
    </div>




</body>


<%- include("partials/footer"); -%>